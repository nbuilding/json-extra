let D = imp "./mod.n"

alias person = { name: str; height: float }

let personDecoder = D.map2(
	person,
	D.field("name", D.str),
	D.field("height", D.float)
)

print(D.decodeString(personDecoder, "{ \"name\": \"Billy\", \"age\": 18 }"))
print(D.decodeString(personDecoder, "{ \"name\": \"Billy\", \"height\": 18 }"))
